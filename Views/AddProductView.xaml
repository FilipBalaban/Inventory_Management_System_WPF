<UserControl
    x:Class="Inventory_Management_System_WPF.Views.AddProductView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inventory_Management_System_WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading}"
            Text="ADD PRODUCT" />

        <!--  Name  -->
        <Grid Grid.Row="1" Style="{StaticResource ContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="Name:" />
            <TextBox Grid.Row="2" Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <!--  Price & Quantity  -->
        <Grid Grid.Row="2" Style="{StaticResource ContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                <ColumnDefinition Width="64" />
                <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Price:" />
            <TextBox
                HorizontalAlignment="Left"
                Grid.Row="2"
                Width="180"
                Text="{Binding Product.Price, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Column="2" Text="Quantity:" />
            <TextBox
                Grid.Row="2"
                Grid.Column="2"
                Width="180"
                Text="{Binding Product.Quantity, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <!--  Category  -->
        <Grid Grid.Row="3" Style="{StaticResource ContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="Category:" />
            <ComboBox
                Grid.Row="2"
                Width="180"
                HorizontalAlignment="Left"
                ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="22" VerticalAlignment="Top" />
        </Grid>

        <!--  Product Content Control  -->
        <Grid Grid.Row="4" Style="{StaticResource ContentGrid}">
            <ContentControl Content="{Binding ProductContentControl}" />
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="5" Style="{StaticResource ContentGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
            </Grid.ColumnDefinitions>
            <Button Command="{Binding AddCommand}" Content="Add product" />
            <Button
                Grid.Column="2"
                Command="{Binding CancelCommand}"
                Content="Cancel" />
        </Grid>
    </Grid>
</UserControl>
