<UserControl
    x:Class="Inventory_Management_System_WPF.Views.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inventory_Management_System_WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading}"
            Text="INVENTORY MANAGEMENT SYSTEM" />

        <Button
            Grid.Row="2"
            Command="{Binding AddProductCommand}"
            Content="Add product" />
        <Button
            Grid.Row="4"
            Command="{Binding RemoveProductCommand}"
            Content="Remove product" />
        <Button
            Grid.Row="6"
            Command="{Binding BrowseProductsCommand}"
            Content="Browse products" />
        <Button
            Grid.Row="8"
            Command="{Binding QuitCommand}"
            Content="Quit" />


    </Grid>
</UserControl>
