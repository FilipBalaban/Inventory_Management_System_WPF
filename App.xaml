<Application
    x:Class="Inventory_Management_System_WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Inventory_Management_System_WPF" 
    xmlns:local1="clr-namespace:Inventory_Management_System_WPF.ValueConverters">
    <Application.Resources>
        <!--Value Converter-->
        <local1:EnumToBoolConverter x:Key="EnumToBoolConverter" />

        <!--  Heading  -->
        <Style x:Key="Heading" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
        </Style>

        <!--  Buttons  -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="MaxWidth" Value="300" />
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!--  ContentGrid  -->
        <Style x:Key="ContentGrid" TargetType="Grid">
            <Setter Property="Margin" Value="0,12" />
        </Style>

        <!--  Textbox  -->
        <Style TargetType="TextBox">
            <Setter Property="MinWidth" Value="180" />
            <Setter Property="Margin" Value="0,8,64,0" />
        </Style>

        <!--  Combobox  -->
        <Style TargetType="ComboBox">
            <Setter Property="MinWidth" Value="180" />
            <Setter Property="Margin" Value="0,8,64,0" />
        </Style>

        <!--  Datepicker  -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,8,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
    </Application.Resources>
</Application>
