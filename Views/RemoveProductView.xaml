<UserControl
    x:Class="Inventory_Management_System_WPF.Views.RemoveProductView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inventory_Management_System_WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading}"
            Text="REMOVE PRODUCT" />

        <!--  Product Search  -->
        <Grid Grid.Row="1" Style="{StaticResource ContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Product ID:" />
            <TextBox
                Grid.Row="2"
                Width="350"
                Text="{Binding ProductIDText}" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Command="{Binding SearchCommand}"
                Content="Search" />
        </Grid>

        <!--  ProductDataContentControl  -->
        <Grid Grid.Row="3" Style="{StaticResource ContentGrid}">
            <ContentControl Content="{Binding ProductDataContentControl}" />
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="5" Style="{StaticResource ContentGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button Command="{Binding RemoveProductCommand}" Content="Remove product" />
            <Button
                Grid.Column="2"
                Command="{Binding CancelCommand}"
                Content="Cancel" />
        </Grid>

    </Grid>
</UserControl>
